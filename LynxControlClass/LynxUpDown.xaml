<UserControl x:Class="SilverlightLynxControls.LynxUpDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"          Height="35"
    SizeChanged="UserControl_SizeChanged">

    <StackPanel x:Name="LayoutRoot" Height="35" Orientation="Horizontal">
        <TextBox HorizontalAlignment="Left" Name="textBox" VerticalAlignment="Top" TextChanged="textBox_TextChanged"  Width="50" Height="30" BorderBrush="#FF2020F8" Margin="3"></TextBox>
        <Button HorizontalAlignment="Left" Name="buttonUp" Click="buttonUp_Click" Width="30" Margin="3">
            <Image Source="/SilverlightLynxControls;component/Images/arrow-up-3.png"></Image>
        </Button>
        <Button HorizontalAlignment="Left" Name="buttonDown" VerticalAlignment="Top"  Click="buttonDown_Click"  Width="30" Margin="3">
            <Image Source="/SilverlightLynxControls;component/Images/arrow-down-3.png"></Image>
        </Button>
    </StackPanel>
</UserControl>
