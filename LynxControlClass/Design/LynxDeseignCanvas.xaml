<UserControl x:Class="SilverlightLynxControls.LynxDeseignCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
           IsTabStop="true" KeyDown="DeseignCanvas_KeyDown">

    <Canvas IsHitTestVisible="True" x:Name="DeseignCanvas" Background="#FFF5FCD2" KeyDown="DeseignCanvas_KeyDown">
        <TextBlock Canvas.Left="0" Canvas.Top="0" Height="19" Name="textBlockCurrent" Text="Current:" Width="109" />
    </Canvas>
</UserControl>
