<UserControl x:Class="SilverlightLynxControls.LynxTreeItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="20" d:DesignWidth="150">
    
    <StackPanel x:Name="LayoutRoot" Background="White" Orientation="Horizontal">
        <Image Height="20" Name="imageIcon" Stretch="Fill" Width="20" />
        <TextBlock Height="20" Name="textBlockText" Text="TextBlock" Width="110" PointerPressed="textBlockText_PointerPressed" />
        <CheckBox Content="" Height="16" Name="checkChecked" Width="18" />
    </StackPanel>
</UserControl>
