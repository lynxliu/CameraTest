<UserControl x:Class="SLPhotoTest.PhotoEdit.LayerIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="30" d:DesignWidth="150" Height="30" Width="150">
    
    <Grid x:Name="LayoutRoot" Background="White" PointerPressed="LayoutRoot_PointerPressed" PointerReleased="LayoutRoot_PointerReleased">
        <Image Height="30" HorizontalAlignment="Left" Name="icon" Stretch="UniformToFill" VerticalAlignment="Top" Width="30" />
        <TextBox Text="UnNamed Layer" Height="20" HorizontalAlignment="Left" Margin="30,0,0,0" Name="textBoxName" VerticalAlignment="Top" Width="90" TextChanged="textBoxName_TextChanged" FontSize="8" FontWeight="Bold" FontStyle="Italic" />
        <Slider Height="10" HorizontalAlignment="Left" Margin="30,20,0,0" Name="LayerTrans" VerticalAlignment="Top" Width="90" Maximum="100" Value="100" SmallChange="1" LargeChange="10" Foreground="#FF13ADF2" ValueChanged="LayerTrans_ValueChanged" />
        <CheckBox Content="View" Height="15" HorizontalAlignment="Left" Margin="124,8,0,0" Name="checkBox1" VerticalAlignment="Top" Width="14" IsChecked="True" Checked="checkBox1_Checked"  Unchecked="checkBox1_Checked"/>
    </Grid>
</UserControl>
