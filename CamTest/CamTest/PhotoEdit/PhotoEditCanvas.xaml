<UserControl x:Class="SLPhotoTest.PhotoEdit.PhotoEditCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Height="300" Width="400">

    <Canvas x:Name="PhotoEditFramework" Height="300" Width="400" Background="DarkGray">
        <Canvas x:Name="PhotoLayers"  Background="White" Height="280" Width="400" Canvas.Top="20">
        </Canvas>
        <Grid Height="20" Width="400" Name="PhotoTitle" Background="#FFB3F5B3">
            <TextBlock Height="20" HorizontalAlignment="Left" Margin="138,0,0,0" Name="textTitle" Text="处理图片" VerticalAlignment="Top" Width="120" />
            <Button Content="X" Height="20" HorizontalAlignment="Left" Margin="380,0,0,0" Name="buttonClose" VerticalAlignment="Top" Width="20" Click="buttonClose_Click" />
        </Grid>
    </Canvas>
</UserControl>
